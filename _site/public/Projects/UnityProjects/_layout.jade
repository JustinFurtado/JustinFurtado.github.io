doctype
html
  head
    link(rel="stylesheet" href='#{baseUrl}/css/Bootstrap/css/bootstrap.min.css')
    link(rel="stylesheet" href='#{baseUrl}/css/main.css')
    link(rel="shortcut icon" href="#{baseUrl}/favicon.ico")
    link(rel="stylesheet" href='#{baseUrl}/css/UnityStyle/style.css')
    script(src="#{baseUrl}/loadfancier.js")
  body
    div.bg(id="MY_BG_HAX")
    div.container
      div.jumbotron
        != partial('../../_partials/header', {activeTab: "projects"})
        != yield
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
        script(src="#{baseUrl}/css/Bootstrap/js/bootstrap.min.js")
        script(src="#{baseUrl}/css/UnityStyle/UnityProgress.js")
        script(src="Build/UnityLoader.js")
        script.
          var interval = setInterval(() => {
            if (!UnityLoader) {
              return;
            }
            clearInterval(interval);
            window.gameInstance = UnityLoader.instantiate("gameContainer", "Build/Web.json", {onProgress: UnityProgress});

          }, 100);

