div(class="#{cardCSS}")
    div.img-hover.text-center.card.m-4.p-4
        - var target = (linkToOtherPage == undefined || !linkToOtherPage) ? "_self" : "_blank";
        a.nostyle.inline_block(href="#{pagePath}", target="#{target}") 
            - if (playable) {
            span.fas.fa-gamepad.fa-3x(style="color: #3b5bdb", title="Playable In Browser")
            - } else {
            span.far.fa-images.fa-3x(style="color: #3b5bdb", title="Slideshow of Screenshots")
            - }
            h2.font-weight-bold #{projectName} 
            img.img-fluid(src="#{imagePath}")
            br
            p.m-3.text-justify #{description}

