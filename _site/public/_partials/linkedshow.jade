div(class="carousel slide", data-ride="carousel", id="#{images.slideName}", data-interval="3500", data-pause="hover", style="height: 700px; background-color: #000000")
    ol.carousel-indicators
        li(data-target="##{images.slideName}" data-slide-to="0" class="active")
        - for (var i = 1; i < images.count; i++){
        li(data-target="##{images.slideName}" data-slide-to="#{i}")
        - }
    div.carousel-inner(role="listbox")
        div.carousel-item.active
            - var tgt = (images.linksToOtherPage[0] == undefined || !images.linksToOtherPage[0]) ? "_self" : "_blank";
            a(href="#{images.links[0]}", target="#{tgt}")
                img.img-fluid.d-block.w-100.img-hover(src="#{images.paths[0]}", style="height: 700px", id="#{images.slideName + 0}")
            div.carousel-caption.p-4(style="background-color: #44444499;")
                h5.font-weight-bold #{images.titles[0]}
                p #{images.descriptions[0]}
        - for (var i = 1; i < images.count; i++){
        div.carousel-item
            - var tgt = (images.linksToOtherPage[i] == undefined || !images.linksToOtherPage[i]) ? "_self" : "_blank";
            a(href="#{images.links[i]}", target="#{tgt}")
                img.img-fluid.d-block.w-100.img-hover(src="#{images.paths[i]}", style="height: 700px", id="#{images.slideName + i}")
            div.carousel-caption.p-4(style="background-color: #44444499;")
                h5.font-weight-bold #{images.titles[i]}
                p #{images.descriptions[i]}
        - }
    a.carousel-control-prev(href="##{images.slideName}" role="button" data-slide="prev")
        span.carousel-control-prev-icon(aria-hidden="true")
        span.sr-only Previous
    a.carousel-control-next(href="##{images.slideName}" role="button" data-slide="next")
        span.carousel-control-next-icon(aria-hidden="false")
        span.sr-only Next
