div.project-group.p-3.m-5
    div.p-1.webgl-content.mx-auto
        h1.text-center.m-4.p-3.font-weight-bold #{gameData.title}
        div.mx-auto(id="gameContainer" style="width: 800px; height: 600px")
        div.footer
            div.webgl-logo
            div.fullscreen(onclick="gameInstance.SetFullscreen(1)")
            div.title #{gameData.title}
        - if (gameData.numTechnologies) {
        h4.m-3.font-weight-bold.text-left Project Tech/Algorithms
        ul.list-inline-block.m-3
            - for (var i = 0; i < gameData.numTechnologies; i++){
            li.d-inline-block.p-1
                div.my-tech-bg.p-2
                    div.tech-text #{gameData.technologies[i]} 
            - }
        - }
        - if (gameData.numParagraphs) {
        h4.m-3.font-weight-bold.text-left Extended Project Details
        - for (var i = 0; i < gameData.numParagraphs; i++){
        p.m-3.text-justify #{gameData.descriptions[i]}
        - }
        - }
        - if (gameData.numCredits !== undefined) {
        h4.m-3.font-weight-bold.text-left Project Credits
        ul.m-3
            li
                p.m-3.text-justify 
                    | Justin Furtado (Me) - 
                    a(href="#{baseUrl}/projects.html") More Projects By Me
            - for (var i = 0; i < gameData.numCredits; i++){
            li
                p.m-3.text-justify
                    | #{gameData.credits[i].prefix}
                    a(href=gameData.credits[i].link, target="_blank") #{gameData.credits[i].postfix}
            - }
        - }
            
